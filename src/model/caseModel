import mongoose from "mongoose";
const { Schema } = mongoose;

const caseSchema = new Schema({
  caseOwner: {
    type: String,
    required: true,
  },
  userId:{
type:String,
required:true,
  },
  caseType: {
    type: String,
    required: true,
  },
  caseSubtype: {
    type: String,
    required: true,
  },
  summary: {
    type: String,
    required: true,
  },
  file: {
    type: String,
    required: false,
  },
  markAsDoneArchived: {
    type: String,
    default: "going",
    // required: false
  },
  assignedTo: {
    type: String,
    default: "iziah.chapin@dockleafs.com",
    // required: false,
  },
  status: {
    type: String,
    default: "pending",
  },

  createdAt: {
    type: Date,
    default: Date.now,
  },
  updatedAt: {
    type: Date,
    default: Date.now,
  },
});

const Cases = mongoose.model("Cases", caseSchema);

export default Cases;
