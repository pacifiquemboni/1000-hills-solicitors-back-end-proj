import mongoose from "mongoose";
const { Schema } = mongoose;

const caseSchema = new Schema({
    caseType: {
   type: String,
    required: false
  },
  caseSubtype: {
  type: String,
    required:false
  },
  summary: {
    type: String,
    required: false
  },
  file: {
    type: String,
    required: false
  },
  markAsDoneArchived: {
    type: String,
    default:"going",
    // required: false
  },
  assignedTo: {
    type: String,
    default:"",
    // required: false,
  },
  status: {
    type: String,
default:"pending",
    
  },
  
  createdAt: {
    type: Date,
    default: Date.now
  },
  updatedAt: {
    type: Date,
    default: Date.now
  },
  
});

const Cases = mongoose.model('Cases', caseSchema);

export default Cases;
